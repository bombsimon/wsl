
package testpkg

import "errors"

func fn1() {
	err := errors.New("x")
	if err != nil { // want "unnecessary whitespace decreases readability"
		panic(err)
	}
}

func fn2() {
	a := 1

	err := errors.New("x")
	if err != nil { // want "unnecessary whitespace decreases readability"
		panic(err)
	}

	_ = a
}

func fn3() {
	a := 1

	err := errors.New("x") // want "missing whitespace decreases readability"
	if err != nil {
		panic(err)
	}

	_ = a
}

func fn4() {
	msg := "not an error"
	err := &msg

	if err != nil {
		panic(err)
	}
}
